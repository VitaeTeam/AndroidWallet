<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="left">

        <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "match_parent"
            android:text = "@string/title_vitae_send"
            android:layout_marginBottom="4dp"
            android:textColor = "@color/subtitle"
            android:textSize = "14sp" />
        <TextView
            android:id = "@+id/txt_amount"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:text = "3.13532 Vitae"
            android:padding="8dp"
            android:background="@drawable/transaction_inputs"
            android:layout_marginBottom="14dp"
            android:textColor = "#434343"
            android:textSize = "22sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "@string/title_currency"
            android:layout_marginBottom="4dp"
            android:textColor = "@color/subtitle"
            android:textSize = "14sp" />

        <TextView
            android:id = "@+id/txt_local_currency"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_marginBottom="14dp"
            android:text = "14710 USD"
            android:textColor = "#4c4c4c"
            android:padding="8dp"
            android:background="@drawable/transaction_inputs"
            android:textSize = "16sp" />


        <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "@string/title_fee"
            android:layout_marginBottom="4dp"
            android:textColor = "@color/subtitle"
            android:textSize = "14sp" />


        <TextView
            android:id = "@+id/txt_fee"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_marginBottom="14dp"
            android:text = "0.13532 Vitae"
            android:textColor = "@color/mainText"
            android:padding="8dp"
            android:background="@drawable/transaction_inputs"
            android:textSize = "16sp" />

        <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "@string/title_description"
            android:layout_marginBottom="4dp"
            android:textColor = "@color/subtitle"
            android:textSize = "14sp" />


        <TextView
            android:id = "@+id/txt_memo"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_marginBottom="20dp"
            android:padding="8dp"
            android:background="@drawable/transaction_inputs"
            android:hint = "@string/add_memo"
            android:textColor = "@color/mainText"
            android:textSize = "16sp" />

        <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "@string/title_receiver_name"
            android:layout_marginBottom="4dp"
            android:textColor = "@color/subtitle"
            android:textSize = "14sp" />

        <EditText
            android:id = "@+id/edit_receiver"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:padding="8dp"
            android:background="@drawable/transaction_inputs"
            android:hint = "@string/title_receiver_name"
            android:textColor = "@color/mainText"
            android:textSize = "16sp" />

    </LinearLayout>

</LinearLayout>