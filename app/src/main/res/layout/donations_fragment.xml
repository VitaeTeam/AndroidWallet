<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/bgWhite"
    android:paddingTop="40dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vitae.org.vitaewallet.ui.base.BaseDrawerActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/edit_amount"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/transaction_inputs"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:hint="VITAE you send"
            android:inputType="numberDecimal"
            android:maxLength="8"
            android:maxLines="1"
            android:padding="8dp"
            android:paddingBottom="11dp"
            android:paddingTop="11dp"
            android:text=""
            android:textColor="#434343"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_swap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Swapped Amount in BTC" />

        <TextView
            android:id="@+id/edit_amount_btc"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/transaction_inputs"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:hint="BTC you will get"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:maxLines="1"
            android:padding="8dp"
            android:paddingBottom="11dp"
            android:paddingTop="22dp"
            android:text=""
            android:textColor="#434343"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edit_btc_address"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/transaction_inputs"
            android:gravity="center_horizontal"
            android:hint="Address to receive BTC"
            android:padding="8dp"
            android:paddingBottom="11dp"
            android:paddingTop="40dp"
            android:text=""
            android:textColor="#434343"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Powered By:" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="118dp"
            app:srcCompat="@drawable/img_instaswap" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <Button
            android:id="@+id/btn_donate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_button_border"
            android:elevation="2dp"
            android:gravity="center"
            android:text="Exchange"
            android:textColor="@color/textColorPurple"
            android:textSize="14sp" />

    </LinearLayout>



</LinearLayout>